{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ES2019.Array",
      "ES2020.Promise",
      "ES2019.Symbol",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules"
  ]
}